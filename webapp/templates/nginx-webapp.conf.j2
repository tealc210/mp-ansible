server {
    listen       {{ app_port }};
    listen  [::]:{{ app_port }};
    server_name  localhost;

    location / {
        autoindex on;
        autoindex_exact_size off;
        root   {{ target_dir }}/playbook_stacker;
        index  index.html index.htm;
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }
}